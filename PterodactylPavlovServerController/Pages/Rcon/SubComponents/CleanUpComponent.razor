@using Fluxor;
@using PavlovVR_Rcon.Models.Pavlov;
@using PterodactylPavlovServerController.Models;
@using PterodactylPavlovServerController.Services;
@using PterodactylPavlovServerController.Stores;
@using Steam.Models.SteamCommunity;
@inject PavlovRconService RconService
@inject IToastService Toast
@inject ApiKeyService ApiKey
@inject AuditService AuditService
@inject IDispatcher Dispatcher
@inject IState<PlayersState> PlayersState

<div class="me-2" style="width: 425px; display: inline-block; vertical-align: top;">
    <h3 class="mb-0">Clean up</h3>
    <small class="text-muted">
        Destroys all idle objects you specify.
    </small>
    <EditForm Model="@cleanUp" OnValidSubmit="@cleanUpSubmitted" class="mt-3">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <InputSelect @bind-Value="cleanUp.ObjectType" class="form-select">
                <option selected disabled>Select an object type</option>
                <option value="All">- All -</option>
                <option value="Bodies">- Bodies -</option>
                <option value="Items">- Items -</option>
                <option value="Vehicles">- Vehicles -</option>
            </InputSelect>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-success form-control">Clean up</button>
        </div>
    </EditForm>
</div>

@code {
    [Parameter]
    [EditorRequired]
    public PavlovRconConnection Connection { get; set; }

    [Parameter]
    [EditorRequired]
    public ServerInfo ServerInfo { get; set; }

    private readonly CleanUpModel cleanUp = new();

    private async Task cleanUpSubmitted()
    {
        try
        {
            await RconService.CleanUp(ApiKey.ApiKey, Connection.ServerId, cleanUp.ObjectType!.Value);
            Toast.ShowSuccess("Clean up executed", "Clean up executed");
            await AuditService.Add(Connection.ServerId, $"Cleaned up {cleanUp.ObjectType}");
        }
        catch (Exception e)
        {
            Toast.ShowError(e.Message);
        }
    }
}
