@using Fluxor;
@using PavlovVR_Rcon.Models.Pavlov;
@using PterodactylPavlovServerController.Models;
@using PterodactylPavlovServerController.Services;
@using PterodactylPavlovServerController.Stores;
@using Steam.Models.SteamCommunity;
@inject PavlovRconService RconService
@inject IToastService Toast
@inject ApiKeyService ApiKey
@inject AuditService AuditService
@inject IDispatcher Dispatcher
@inject IState<PlayersState> PlayersState

<div class="me-2" style="width: 425px; display: inline-block; vertical-align: top;">
    <h3 class="mb-0">Disable voting</h3>
    <small class="text-muted">
        Prevents players voting to end the match or kick other players.
    </small>
    <EditForm Model="@voting" OnValidSubmit="@votingSubmitted" class="mt-3">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <button type="submit" class="btn btn-outline-success form-control" @onclick="@(() => voting.Enable = true)">Enable</button>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-danger form-control" @onclick="@(() => voting.Enable = false)">Disable</button>
        </div>
    </EditForm>
</div>

@code {
    [Parameter]
    [EditorRequired]
    public PavlovRconConnection Connection { get; set; }

    [Parameter]
    [EditorRequired]
    public ServerInfo ServerInfo { get; set; }

    private readonly GenericEnableModel voting = new();

    private async Task votingSubmitted()
    {
        try
        {
            await RconService.DisableVoting(ApiKey.ApiKey, Connection.ServerId, voting.Enable!.Value);
            Toast.ShowSuccess("Voting has been updated", "Game cheat executed");
            await AuditService.Add(Connection.ServerId, $"Updated voting to {voting.Enable!.Value}");
        }
        catch (Exception e)
        {
            Toast.ShowError(e.Message);
        }
    }
}
