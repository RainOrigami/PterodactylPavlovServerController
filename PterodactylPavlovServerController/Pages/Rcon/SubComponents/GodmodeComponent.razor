@using Fluxor;
@using PavlovVR_Rcon.Models.Pavlov;
@using PterodactylPavlovServerController.Models;
@using PterodactylPavlovServerController.Services;
@using PterodactylPavlovServerController.Stores;
@using Steam.Models.SteamCommunity;
@inject PavlovRconService RconService
@inject IToastService Toast
@inject ApiKeyService ApiKey
@inject AuditService AuditService
@inject IDispatcher Dispatcher
@inject IState<PlayersState> PlayersState

<div class="me-2" style="width: 425px; display: inline-block; vertical-align: top;">
    <h3 class="mb-0">Godmode</h3>
    <small class="text-muted">
        Makes the target player immune to all damage.
    </small>
    <EditForm Model="@godmode" OnValidSubmit="@godmodeSubmitted" class="mt-3">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <InputSelect @bind-Value="godmode.UniqueId" class="form-select">
                <option selected disabled>Select a player</option>
                <option value="0">- Everybody -</option>
                @if (Connection.PlayerDetails != null)
                {
                    foreach (KeyValuePair<ulong, PlayerDetail> connectionPlayerDetail in Connection.PlayerDetails)
                    {
                        string? playerName = connectionPlayerDetail.Value.PlayerName;
                        if (PlayersState.Value.PlayerSummaries.TryGetValue(connectionPlayerDetail.Key, out PlayerSummaryModel? playerSummary))
                        {
                            playerName = playerSummary.Nickname;
                        }
                        <option value="@connectionPlayerDetail.Key">@playerName</option>
                    }
                }
            </InputSelect>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-success form-control" @onclick="@(() => godmode.Enable = true)">Enable</button>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-danger form-control" @onclick="@(() => godmode.Enable = false)">Disable</button>
        </div>
    </EditForm>
</div>

@code {
    [Parameter]
    [EditorRequired]
    public PavlovRconConnection Connection { get; set; }

    [Parameter]
    [EditorRequired]
    public ServerInfo ServerInfo { get; set; }

    private readonly GenericPlayerEnableModel godmode = new();

    private async Task godmodeSubmitted()
    {
        try
        {
            if (godmode.UniqueId!.Value == 0)
            {
                try
                {
                    await RconService.Godmode(ApiKey.ApiKey, Connection.ServerId, "All", godmode.Enable!.Value);
                }
                catch (Exception e)
                {
                    Toast.ShowError(e.Message);
                }

                Toast.ShowSuccess("All players godmode updated", "Godmode updated");
                await AuditService.Add(Connection.ServerId, $"Updated godmode for all players to {godmode.Enable}");
                return;
            }

            await RconService.Godmode(ApiKey.ApiKey, Connection.ServerId, godmode.UniqueId!.Value.ToString(), godmode.Enable!.Value);

            Toast.ShowSuccess("Godmode has been updated", "Godmode updated");
            await AuditService.Add(Connection.ServerId, $"Updated godmode for player {godmode.UniqueId!.Value} to {godmode.Enable}");
        }
        catch (Exception e)
        {
            Toast.ShowError(e.Message);
        }
    }
}
