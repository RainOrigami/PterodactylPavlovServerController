@using Fluxor;
@using PavlovVR_Rcon.Models.Pavlov;
@using PterodactylPavlovServerController.Models;
@using PterodactylPavlovServerController.Services;
@using PterodactylPavlovServerController.Stores;
@using Steam.Models.SteamCommunity;
@inject PavlovRconService RconService
@inject IToastService Toast
@inject ApiKeyService ApiKey
@inject AuditService AuditService
@inject IDispatcher Dispatcher
@inject IState<PlayersState> PlayersState

<div class="me-2" style="width: 425px; display: inline-block; vertical-align: top;">
    <h3 class="mb-0">Supply</h3>
    <small class="text-muted">
        Gives the target player an infinite amount of the item you specify.
    </small>
    <EditForm Model="@supply" OnValidSubmit="@supplySubmitted" class="mt-3">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <InputSelect @bind-Value="supply.UniqueId" class="form-select">
                <option selected disabled>Select a player</option>

                @if (Connection.PlayerDetails != null)
                {
                    <option value="0">- Give to everybody -</option>

                    foreach (KeyValuePair<ulong, PlayerDetail> connectionPlayerDetail in Connection.PlayerDetails)
                    {
                        string? playerName = connectionPlayerDetail.Value.PlayerName;
                        if (PlayersState.Value.PlayerSummaries.TryGetValue(connectionPlayerDetail.Key, out PlayerSummaryModel? playerSummary))
                        {
                            playerName = playerSummary.Nickname;
                        }
                        <option value="@connectionPlayerDetail.Key">@playerName</option>
                    }
                }
            </InputSelect>
        </div>
        <div class="mb-3">
            <InputSelect @bind-Value="supply.Item" class="form-select">
                <option selected disabled>Select an item</option>
                <option value="">- Disable -</option>
                @foreach (Item item in Enum.GetValues(typeof(Item)).OfType<Item>().OrderBy(i => i.ToString()))
                {
                    <option value="@item">@item</option>
                }
            </InputSelect>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-success form-control">Supply</button>
        </div>
    </EditForm>
</div>

@code {
    [Parameter]
    [EditorRequired]
    public PavlovRconConnection Connection { get; set; }

    [Parameter]
    [EditorRequired]
    public ServerInfo ServerInfo { get; set; }

    private readonly GiveItemModel supply = new();

    private async Task supplySubmitted()
    {
        try
        {
            if (supply.UniqueId!.Value == 0)
            {
                try
                {
                    await RconService.Supply(ApiKey.ApiKey, Connection.ServerId, "All", supply.Item!.Value.ToString());
                }
                catch (Exception e)
                {
                    Toast.ShowError(e.Message);
                }

                await AuditService.Add(Connection.ServerId, $"Supplied all players item {supply.Item!.Value}");
                Toast.ShowSuccess("All players received item supply", "Player cheat executed");
                return;
            }

            await RconService.Supply(ApiKey.ApiKey, Connection.ServerId, supply.UniqueId!.Value.ToString(), supply.Item!.Value.ToString());
            await AuditService.Add(Connection.ServerId, $"Supplied player {supply.UniqueId!.Value} item {supply.Item!.Value}");
            Toast.ShowSuccess("Player received item supply", "Player cheat executed");
        }
        catch (Exception e)
        {
            Toast.ShowError(e.Message);
        }
    }

}
