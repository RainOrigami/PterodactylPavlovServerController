@using Fluxor;
@using PavlovVR_Rcon.Models.Pavlov;
@using PterodactylPavlovServerController.Models;
@using PterodactylPavlovServerController.Services;
@using PterodactylPavlovServerController.Stores;
@using Steam.Models.SteamCommunity;
@inject PavlovRconService RconService
@inject IToastService Toast
@inject ApiKeyService ApiKey
@inject AuditService AuditService
@inject IDispatcher Dispatcher
@inject IState<PlayersState> PlayersState

<div class="me-2" style="width: 425px; display: inline-block; vertical-align: top;">
    <h3 class="mb-0">Set Gravity</h3>
    <small class="text-muted">
        Changes the gravity for all objects to the multiplier you set.
    </small>
    <EditForm Model="@gravity" OnValidSubmit="@gravitySubmitted" class="mt-3">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label>Gravity multiplier (1.0 = 100%)</label>
            <InputNumber @bind-Value="gravity.Value" class="form-control" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-success form-control">Set</button>
        </div>
    </EditForm>
</div>

@code {
    [Parameter]
    [EditorRequired]
    public PavlovRconConnection Connection { get; set; }

    [Parameter]
    [EditorRequired]
    public ServerInfo ServerInfo { get; set; }

    private readonly GenericFloatModel gravity = new();

    private async Task gravitySubmitted()
    {
        try
        {
            await RconService.SetGravity(ApiKey.ApiKey, Connection.ServerId, gravity.Value!.Value);
            Toast.ShowSuccess("Gravity has been updated", "Game cheat executed");
            await AuditService.Add(Connection.ServerId, $"Updated gravity to {gravity.Value!.Value}");
        }
        catch (Exception e)
        {
            Toast.ShowError(e.Message);
        }
    }
}
