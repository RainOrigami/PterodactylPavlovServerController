@using Fluxor;
@using PavlovVR_Rcon.Models.Pavlov;
@using PterodactylPavlovServerController.Models;
@using PterodactylPavlovServerController.Services;
@using PterodactylPavlovServerController.Stores;
@using Steam.Models.SteamCommunity;
@inject PavlovRconService RconService
@inject IToastService Toast
@inject ApiKeyService ApiKey
@inject AuditService AuditService
@inject IDispatcher Dispatcher
@inject IState<PlayersState> PlayersState

<div class="me-2" style="width: 425px; display: inline-block; vertical-align: top;">
    <h3 class="mb-0">Movement speed</h3>
    <small class="text-muted">
        Sets the movement speed for the target player.
    </small>
    <EditForm Model="@speed" OnValidSubmit="@speedSubmitted" class="mt-3">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <InputSelect @bind-Value="speed.UniqueId" class="form-select">
                <option selected disabled>Select a player</option>

                @if (Connection.PlayerDetails != null)
                {
                    <option value="0">- Everybody -</option>

                    foreach (KeyValuePair<ulong, PlayerDetail> connectionPlayerDetail in Connection.PlayerDetails)
                    {
                        string? playerName = connectionPlayerDetail.Value.PlayerName;
                        if (PlayersState.Value.PlayerSummaries.TryGetValue(connectionPlayerDetail.Key, out PlayerSummaryModel? playerSummary))
                        {
                            playerName = playerSummary.Nickname;
                        }
                        <option value="@connectionPlayerDetail.Key">@playerName</option>
                    }
                }
            </InputSelect>
        </div>
        <div class="mb-3">
            <label>Speed multiplier (1.0 = 100%)</label>
            <InputNumber @bind-Value="speed.Multiplier" class="form-control" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-success form-control">Set</button>
        </div>
    </EditForm>
</div>

@code {
    [Parameter]
    [EditorRequired]
    public PavlovRconConnection Connection { get; set; }

    [Parameter]
    [EditorRequired]
    public ServerInfo ServerInfo { get; set; }

    private readonly SpeedModel speed = new();

    private async Task speedSubmitted()
    {
        try
        {
            if (speed.UniqueId!.Value == 0)
            {
                try
                {
                    await RconService.MovementSpeed(ApiKey.ApiKey, Connection.ServerId, "All", speed.Multiplier!.Value);
                }
                catch (Exception e)
                {
                    Toast.ShowError(e.Message);
                }

                Toast.ShowSuccess("Speed of all players has been updated", "Player cheat executed");
                await AuditService.Add(Connection.ServerId, $"Updated movement speed for all players to {speed.Multiplier!.Value}");
                return;
            }

            await RconService.MovementSpeed(ApiKey.ApiKey, Connection.ServerId, speed.UniqueId!.Value.ToString(), speed.Multiplier!.Value);
            Toast.ShowSuccess("Player speed has been updated", "Player cheat executed");
            await AuditService.Add(Connection.ServerId, $"Updated movement speed for player {speed.UniqueId!.Value} to {speed.Multiplier!.Value}");
        }
        catch (Exception e)
        {
            Toast.ShowError(e.Message);
        }
    }
}
