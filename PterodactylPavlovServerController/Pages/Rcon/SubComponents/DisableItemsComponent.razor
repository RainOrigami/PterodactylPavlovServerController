@using Fluxor;
@using PavlovVR_Rcon.Models.Pavlov;
@using PterodactylPavlovServerController.Models;
@using PterodactylPavlovServerController.Services;
@using PterodactylPavlovServerController.Stores;
@using Steam.Models.SteamCommunity;
@inject PavlovRconService RconService
@inject IToastService Toast
@inject ApiKeyService ApiKey
@inject AuditService AuditService
@inject IDispatcher Dispatcher
@inject IState<PlayersState> PlayersState

<div class="me-2" style="width: 425px; display: inline-block; vertical-align: top;">
    <h3 class="mb-0">Disable Items</h3>
    <small class="text-muted">
        Disables the target player from using items (ie. firing a gun).
    </small>
    <EditForm Model="@items" OnValidSubmit="@itemsSubmitted" class="mt-3">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <InputSelect @bind-Value="items.UniqueId" class="form-select">
                <option selected disabled>Select a player</option>

                @if (Connection.PlayerDetails != null)
                {
                    <option value="0">- Everybody -</option>

                    foreach (KeyValuePair<ulong, PlayerDetail> connectionPlayerDetail in Connection.PlayerDetails)
                    {
                        string? playerName = connectionPlayerDetail.Value.PlayerName;
                        if (PlayersState.Value.PlayerSummaries.TryGetValue(connectionPlayerDetail.Key, out PlayerSummaryModel? playerSummary))
                        {
                            playerName = playerSummary.Nickname;
                        }
                        <option value="@connectionPlayerDetail.Key">@playerName</option>
                    }
                }
            </InputSelect>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-success form-control" @onclick="@(() => items.Enable = true)">Enable</button>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-danger form-control" @onclick="@(() => items.Enable = false)">Disable</button>
        </div>
    </EditForm>
</div>

@code {
    [Parameter]
    [EditorRequired]
    public PavlovRconConnection Connection { get; set; }

    [Parameter]
    [EditorRequired]
    public ServerInfo ServerInfo { get; set; }

    private readonly GenericPlayerEnableModel items = new();

    private async Task itemsSubmitted()
    {
        try
        {
            if (items.UniqueId!.Value == 0)
            {
                foreach (KeyValuePair<ulong, PlayerDetail> connectionPlayerDetail in Connection.PlayerDetails!)
                {
                    try
                    {
                        await RconService.DisableItems(ApiKey.ApiKey, Connection.ServerId, items.UniqueId!.Value, items.Enable!.Value);
                    }
                    catch (Exception e)
                    {
                        Toast.ShowError(e.Message);
                    }
                }

                Toast.ShowSuccess($"All players had their items {(items.Enable!.Value ? "enabled" : "disabled")}", "Player cheat executed");
                await AuditService.Add(Connection.ServerId, $"{(items.Enable!.Value ? "Enabled" : "Disabled")} items for all players");
                return;
            }

            await RconService.DisableItems(ApiKey.ApiKey, Connection.ServerId, items.UniqueId!.Value, items.Enable!.Value);
            Toast.ShowSuccess($"Player had their items {(items.Enable!.Value ? "enabled" : "disabled")}", "Player cheat executed");
            await AuditService.Add(Connection.ServerId, $"{(items.Enable!.Value ? "Enabled" : "Disabled")} items for player {items.UniqueId!.Value}");
        }
        catch (Exception e)
        {
            Toast.ShowError(e.Message);
        }
    }
}
